<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp" >

    <ImageView
        style="@style/imagem"
        android:id="@+id/img_place_photo"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        style="@style/Titulo"
        android:id="@+id/txt_place_name"
        android:text="Um lugar qualquer" />

    <TextView
        style="@style/descricao"
        android:id="@+id/txt_place_description"
        android:text="Este Ã© um lugar qualquer que serve alguma coisa" />

    <RatingBar
        android:id="@+id/rtb_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_place_photo"
        android:layout_alignLeft="@id/txt_place_name"
        android:layout_marginTop="10dp"
        style="?android:attr/ratingBarStyleSmall"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3"
        android:stepSize="0.5" />

    <TextView
        style="@style/distance"
        android:id="@+id/txt_place_distance"
        android:text="0.4 KM" />


</RelativeLayout>